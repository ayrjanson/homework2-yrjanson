<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:columnCount="4"
            app:rowCount="4">

            <Button
                android:id="@+id/button00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:backgroundTint="@color/black"
                app:layout_column="0"
                app:layout_row="0" />

            <Button
                android:id="@+id/button01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:backgroundTint="@color/black"
                app:layout_column="1"
                app:layout_row="0" />

            <Button
                android:id="@+id/button02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:backgroundTint="@color/black"
                app:layout_column="2"
                app:layout_row="0" />

            <Button
                android:id="@+id/button03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:backgroundTint="@color/black"
                app:layout_column="3"
                app:layout_row="0" />

            <Button
                android:id="@+id/button10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:backgroundTint="@color/black"
                app:layout_column="0"
                app:layout_row="1" />

            <Button
                android:id="@+id/button11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:backgroundTint="@color/black"
                app:layout_column="1"
                app:layout_row="1" />

            <Button
                android:id="@+id/button12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:backgroundTint="@color/black"
                app:layout_column="2"
                app:layout_row="1" />

            <Button
                android:id="@+id/button13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:backgroundTint="@color/black"
                app:layout_column="3"
                app:layout_row="1" />

            <Button
                android:id="@+id/button20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:text="9"
                app:layout_column="0"
                app:layout_row="2" />

            <Button
                android:id="@+id/button21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:backgroundTint="@color/black"
                app:layout_column="1"
                app:layout_row="2" />

            <Button
                android:id="@+id/button22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11"
                android:backgroundTint="@color/black"
                app:layout_column="2"
                app:layout_row="2" />

            <Button
                android:id="@+id/button23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:backgroundTint="@color/black"
                app:layout_column="3"
                app:layout_row="2" />

            <Button
                android:id="@+id/button30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13"
                android:backgroundTint="@color/black"
                app:layout_column="0"
                app:layout_row="3" />

            <Button
                android:id="@+id/button31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14"
                android:backgroundTint="@color/black"
                app:layout_column="1"
                app:layout_row="3" />

            <Button
                android:id="@+id/button32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15"
                android:backgroundTint="@color/black"
                app:layout_column="2"
                app:layout_row="3" />

            <Button
                android:id="@+id/button33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:backgroundTint="@color/black"
                app:layout_column="3"
                app:layout_row="3" />
        </androidx.gridlayout.widget.GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reset" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>